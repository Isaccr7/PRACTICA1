<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PRACTICA1.view.Home">
    <ContentPage.Content>


        <StackLayout Margin="50" >
            <Frame CornerRadius="20" BackgroundColor="Snow">
            <StackLayout >
                <Label Text="BIENVENIDO" HorizontalOptions="Center" FontSize="Title" TextColor="Black" FontAttributes="Bold"/>
                    <Image Source="https://www.york.ac.uk/media/news-and-events/pressreleases/2020/private-school-505.jpg" ></Image>
                <Label Text="DNI"/>
                <Entry Placeholder="DNI" Keyboard="Numeric"></Entry>
                <Label Text="Contraseña"/>
                <Entry Placeholder="Contraseña" Keyboard="Numeric"></Entry>
                    <Button Text="GUARDAR" x:Name="btnIngresar" Clicked="btnIngresar_Clicked"  BackgroundColor="Blue" TextColor="White" FontAttributes="Bold" CornerRadius="20"/>


            </StackLayout>
                
            </Frame>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>